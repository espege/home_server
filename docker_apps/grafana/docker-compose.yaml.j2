services:
  alloy:
    image: grafana/alloy:latest
    container_name: alloy
    environment:
      TZ: {{ docker_compose_generator_default_time_zone }}
    volumes:
      - type: bind
        source: {{ docker_compose_generator_default_bind_path }}/{{ docker_app }}/config.alloy
        target: /etc/alloy/config.alloy
      - /var/lib/docker/:/var/lib/docker:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
    ports:
      - "{{ current_loop_facts['docker_port']  }}:{{ current_loop_facts['docker_port'] }}"
    command: >
      run --server.http.listen-addr=0.0.0.0:{{ current_loop_facts['docker_port']  }} --storage.path=/var/lib/alloy/data /etc/alloy/config.alloy
